<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Emulator</title>
    <script src="EmulatorJS/loader.js"></script>
    <style>
        body { text-align: center; }
        canvas { border: 1px solid black; }
    </style>
</head>
<body>
    <h1>Now Playing</h1>
    <div id="emulator"></div>

    <script>
        // Get game from URL (e.g., emulator.html?game=example.nes)
        const urlParams = new URLSearchParams(window.location.search);
        const game = urlParams.get('game');

        if (game) {
            EJS_player = '#emulator';
            EJS_gameUrl = `games/${game}.nes`; // Change extension based on console
            EJS_core = 'nes'; // EmulatorJS core for NES, change as needed
            EJS_startOnLoaded = true;

            EJS_Ready();
        } else {
            document.write("<p>No game selected!</p>");
        }
    </script>
</body>
</html>
